{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Karma Chrome",
            "address": "localhost",
            "port": 9333,
            "sourceMaps": true,
            "trace": true,
            "webRoot": "${workspaceRoot}/src",
            "sourceMapPathOverrides": {
                "webpack:\\*": "${workspaceFolder}/*"
            },
            "pathMapping": {
              "/": "${workspaceRoot}",
              "/base/": "${workspaceRoot}"
            }
        }
    ]
}
